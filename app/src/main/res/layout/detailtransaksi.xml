<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/inter"
            android:text="Nama Pengeluaran"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtnamapengeluaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter"
            android:text="Nicco Ananta Tri Kusuma"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/inter"
            android:text="Total Pengeluaran"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtjumlahpengeluaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter"
            android:text="Nicco Ananta Tri Kusuma"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/inter"
            android:text="Kategori"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtkategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter"
            android:text="Nicco Ananta Tri Kusuma"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/inter"
            android:text="Tanggal dan waktu"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtdateandtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter"
            android:text="Nicco Ananta Tri Kusuma"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/inter"
            android:text="Deskripsi"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtdeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter"
            android:text="Nicco Ananta Tri Kusuma"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/inter"
            android:text="Gambar"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtgambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter"
            android:text="Nicco Ananta Tri Kusuma"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/inter"
            android:text="Kuantitas"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtkuantitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter"
            android:text="Nicco Ananta Tri Kusuma"
            android:textSize="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/inter"
            android:text="Media Pembayaran"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtpaymentmethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/inter"
            android:text="Nicco Ananta Tri Kusuma"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnbatal"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:width="100dp"
                android:background="@drawable/buttondash"
                android:fontFamily="@font/inter"
                android:text="Batal"
                android:layout_marginRight="20dp"
                android:textColor="#EEEEEE"
                android:textSize="10dp" />

            <Button
                android:id="@+id/btnubah"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:width="100dp"
                android:background="@drawable/buttondash"
                android:fontFamily="@font/inter"
                android:text="Ubah"
                android:textColor="#EEEEEEEE"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>