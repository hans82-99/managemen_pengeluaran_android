<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundsemua"
    tools:context=".ActivityPemasukan">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/intentpengeluaran"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/buttondash"
            android:fontFamily="@font/inter"
            android:text="Pengeluaran"
            android:textColor="#F8EDE3"
            android:textSize="12sp" />

        <Button
            android:id="@+id/intentpemasukan"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/butonunclicked"
            android:fontFamily="@font/inter"
            android:text="Pemasukan"
            android:textColor="#F8EDE3"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Form Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/kartuform"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerini">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F8EDE3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/inter_black"
                    android:text="PEMASUKAN"
                    android:textColor="#8D493A"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/inter"
                    android:text="Pemasukan adalah hal yang paling membahagiakan"
                    android:textColor="#8D493A"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/namapemasukan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/foredittext"
                    android:hint="Nama Pemasukan"
                    android:paddingTop="10dp"
                    android:paddingBottom="13dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#8D493A"
                    android:textColorHint="#8D493A"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/jumlahpemasukan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/foredittext"
                    android:hint="Jumlah Pemasukan"
                    android:inputType="number"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="13dp"
                    android:textColor="#8D493A"
                    android:textColorHint="#8D493A"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/deskripsipemasukan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/foredittext1"
                    android:hint="Deskripsi Pemasukan"
                    android:paddingTop="10dp"
                    android:paddingBottom="13dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#8D493A"
                    android:textColorHint="#8D493A"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/mediapembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/foredittext"
                    android:hint="Media Pembayaran"
                    android:paddingTop="10dp"
                    android:paddingBottom="13dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#8D493A"
                    android:textColorHint="#8D493A"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/inikategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="150dp"
                        android:background="@drawable/foredittext"
                        android:textColorHint="#8D493A" />

                    <Button
                        android:id="@+id/crudkategori"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/buttondash"
                        android:fontFamily="@font/inter"
                        android:paddingBottom="5dp"
                        android:text="+"
                        android:textColor="#F8EDE3"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hasiltanggal"
                        android:layout_width="wrap_content"
                        android:editable="false"
                        android:layout_height="wrap_content"
                        android:background="@drawable/foredittext"
                        android:paddingTop="10dp"
                        android:minWidth="150dp"
                        android:paddingBottom="13dp"
                        android:paddingHorizontal="20dp"
                        android:text="Tanggal"
                        android:textColor="#8D493A"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/tambahtanggal"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/buttondash"
                        android:fontFamily="@font/inter"
                        android:paddingBottom="5dp"
                        android:text="+"
                        android:textColor="#F8EDE3"
                        android:textSize="24sp" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="4dp"
                    app:cardBackgroundColor="#F8EDE3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="Tambahkan Gambar"
                        android:fontFamily="@font/inter"
                        android:textColor="#8D493A"
                        android:textSize="12sp"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/viewgambarpengeluaran"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="100dp"
                        android:paddingVertical="5dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Masukkan Gambar"
                        android:background="@drawable/outlinegambar"
                        android:autofillHints="Upload Image"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buatstay"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/buttondash"
                        android:fontFamily="@font/inter"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="Buat - tetap disini"
                        android:textColor="#F8EDE3"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/buatkedashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginStart="-15dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/buttondash"
                        android:fontFamily="@font/inter"
                        android:text="Buat"
                        android:textColor="#F8EDE3"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/backgroundbalance"
        app:elevation="4dp"
        app:itemTextColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
